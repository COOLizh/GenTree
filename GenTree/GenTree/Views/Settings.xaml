<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Settings" Icon="gearwheel.png" BackgroundColor="LemonChiffon" xamarinforms:BottomBarPageExtensions.TabColor="#20b2aa"
    xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:xamarinforms="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GenTree.ViewModels"
             x:Class="GenTree.Views.Settings">
    
    <ContentPage.BindingContext>
            <local:MainViewModel/>
        </ContentPage.BindingContext>

    <TableView>
        <TableView.Root>
            <TableRoot>
                <TableSection Title="Personal information">
                    <ImageCell ImageSource="person.png" 
                               Text="myName mySurname"
                               Detail="myBirthday myGender"/>
                    <TextCell 
                        Text="Login : "
                        Detail="myLogin"/>
                    <TextCell 
                        Text="Password : "
                        Detail="myPassword"/>
                </TableSection>
                <TableSection Title="Application settings">
                    <SwitchCell Text="Theme" />
                </TableSection>
            </TableRoot>
        </TableView.Root>
    </TableView>

</ContentPage>